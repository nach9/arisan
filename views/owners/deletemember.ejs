<!DOCTYPE html>
<html lang="en">
<% include ../partials/head%>
<body class="fixed-nav sticky-footer bg-dark" id="page-top">
  <% include ../partials/nav%>
  <div class="content-wrapper">
  	<!-- content here -->
    <div class="container-fluid">
      <!-- Breadcrumbs-->
      <ol class="breadcrumb">
        <li class="breadcrumb-item">
          <a href="/user">User</a>
        </li>
        <li class="breadcrumb-item">
          <a href="/owner">Owner</a>
        </li>
        <li class="breadcrumb-item active">Detail</li>
        <li class="breadcrumb-item active">Delete Member</li>
      </ol>
      <div class="card card-login mx-auto mt-5">
      <div class="card-header">Delete Member</div>
      <div class="card-body">
        <% rows.Users.forEach((row) => { %>
        <form action="/owner/detail/<%= rows.id %>/<%= row.id %>/delete" method="POST">
            <% if(row.id == userid) { %>
            <input class="form-control" name="UserId" type="text" value="<%= row.id %>" hidden>
              <div class="form-group">
                <label for="">Name</label>
                <input class="form-control" name="name" type="text" value="<%= row.getFullName() %>" disabled>
              </div>
              <div class="form-group">
                <label for="">Phone</label>
                <input class="form-control" name="phone" type="text" value="<%= row.phone %>" disabled>
              </div>
              <div class="form-group">
                <label for="">Email</label>
                <input class="form-control" name="email" type="email" value="<%= row.email %>" disabled>
              </div>
            <% } %>          
        <% }) %>
          <input class="btn btn-primary btn-block" type='submit' value="Delete">
        </form>
      </div>
    </div>
    </div>
    <!-- /content -->
	</div>
    <% include ../partials/footer%>
  </div>
</body>
</html>